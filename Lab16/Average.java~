/* lab 16
 * displays average of an array row
 */


public class Average{
  
  public static void main (String [] args){
    int [] [] table = {{1,2,3},{4,5,6},{7,8}};
    for (int row = 0; row < table.length; row++){
      double total = 0;
      for (int z : table[row]){
        System.out.print( z + " ");
        total += z;
      }
      System.out.println( "\t Average" + total );
    }
    
  }//end main
  
}//end class